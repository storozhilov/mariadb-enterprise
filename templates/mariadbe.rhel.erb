[<%= node['mariadb']['name'] %>]
name = <%= node['mariadb']['name'] %>
baseurl = http://code.mariadb.com/mariadb-enterprise/<%= node['mariadb']['version'] %>/yum/<%= node[:platform] == "redhat" ? node[:platform_family] : node[:platform] %>/$releasever/$basearch
gpgkey=https://downloads.mariadb.com/files/MariaDB/RPM-GPG-KEY-MariaDB-Ent
gpgcheck=1

