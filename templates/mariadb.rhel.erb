[<%= node['mariadb']['name'] %>]
name = <%= node['mariadb']['name'] %>
baseurl = http://downloads.mariadb.com/enterprise/<%= node['mariadb']['token'] %>/mariadb-enterprise/<%= node['mariadb']['version'] %>/yum/<%= node[:platform] == "redhat" ? node[:platform_family] : node[:platform] %>/$releasever/$basearch
gpgkey=https://downloads.mariadb.com/files/MariaDB/RPM-GPG-KEY-MariaDB-Ent
gpgcheck=1

[<%= node['mariadb']['name'] %>-pilot]
name = <%= node['mariadb']['name'] %>-pilot
baseurl = http://qa01.mariadb.com/~jenkins/release/latest/pilot-<%= node['mariadb']['version'] %>/<%= node[:platform] == "redhat" ? node[:platform_family] : node[:platform] %>/$releasever/$basearch
gpgkey=https://downloads.mariadb.com/files/MariaDB/RPM-GPG-KEY-MariaDB-Ent
gpgcheck=0
